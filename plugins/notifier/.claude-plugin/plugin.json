{
  "name": "notifier",
  "version": "1.0.0",
  "description": "Cross-platform notification plugin that plays sounds on desktop and vibrates on Termux/Android when Claude Code is awaiting user input",
  "author": {
    "name": "Marty",
    "url": "https://github.com/convocli"
  },
  "license": "MIT",
  "keywords": ["notification", "sound", "vibration", "termux", "android", "accessibility"],
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/play-notification.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/play-notification.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/play-notification.sh"
          }
        ]
      }
    ]
  }
}
